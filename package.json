{
  "name": "gabliam-sources",
  "version": "8.11.1",
  "private": true,
  "license": "MIT",
  "scripts": {
    "bootstrap": "yarn --cwd \"scripts/build\" && yarn --cwd \"scripts/release\"",
    "build": "ts-node ./scripts/build/build.ts",
    "changelog": "conventional-changelog -i  CHANGELOG.md -p angular  -s -r 0",
    "coverage": "cat ./coverage/lcov.info | coveralls",
    "example:express:graphql": "lerna run --scope graphql-sample start --stream",
    "example:express:passport": "lerna run --scope express-passport-sample start --stream",
    "example:express:typeorm": "lerna run --scope typeorm-sample start --stream",
    "example:koa:graphql": "SERVER_TYPE=koa lerna run --scope graphql-sample start --stream",
    "example:koa:typeorm": "SERVER_TYPE=koa lerna run --scope typeorm-sample start --stream",
    "lint": "eslint 'packages/**/**.ts'",
    "prettier": "prettier --single-quote --write --parser typescript \"./{packages,examples}/**/src/**/*.ts\"",
    "release": "ts-node ./scripts/release/release.ts",
    "release:canary": "ts-node ./scripts/release/release.ts --canary",
    "test": "jest --runInBand",
    "test:ci": "jest --runInBand --coverage"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/reflect-metadata": "^0.1.0",
    "@types/sinon": "^9.0.8",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.10.0",
    "commitizen": "^4.2.2",
    "conventional-changelog-cli": "^2.1.1",
    "coveralls": "^3.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-serializer-path": "^0.1.15",
    "jest-serializer-supertest": "^1.6.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.0",
    "reflect-metadata": "^0.1.10",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.9.3"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --single-quote --write",
      "eslint 'packages/**/**.ts'"
    ]
  },
  "workspaces": [
    "packages/core/*",
    "packages/conf-loader/*",
    "packages/broker/*",
    "packages/cache/*",
    "packages/database/*",
    "packages/web/*",
    "packages/tools/*",
    "examples/*",
    "scripts/*"
  ],
  "engines": {
    "node": ">=8.9.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "packageManager": "yarn@3.3.0"
}
